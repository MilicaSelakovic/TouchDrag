<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="touch.drag.milica.master.Help">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundMain"
            android:padding="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="@android:dimen/app_icon_size"
                android:id="@+id/imageButton10"
                android:background="@android:color/transparent"
                android:layout_weight="0.08"
                android:contentDescription=""
                tools:ignore="ContentDescription"
                app:srcCompat="@drawable/ic_action_back" />

            <TextView
                android:text="@string/touch_amp_drag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView"
                android:layout_weight="1"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_marginLeft="10dp"
                tools:ignore="RtlHardcoded"
                android:fontFamily="sans-serif"
                android:paddingTop="5dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:text="@string/introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/backgroundMain"
                    android:textAlignment="textStart"
                    android:textSize="25sp" />

                <TextView
                    android:text="@string/app_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/materialcolorpicker__grey" />

                <TextView
                    android:text="@string/modes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/materialcolorpicker__grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="@android:dimen/app_icon_size"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:background="@mipmap/ic_helpdraw"
                        style="@android:style/Widget.ImageButton"
                        android:contentDescription=""
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:text="@string/construction_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="20dp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@android:dimen/app_icon_size"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:background="@mipmap/ic_helpmove"
                        style="@android:style/Widget.ImageButton"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:text="@string/drag_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="20dp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="@android:dimen/app_icon_size"
                        android:layout_height="@android:dimen/app_icon_size"
                        android:background="@mipmap/ic_helpselect"
                        style="@android:style/Widget.ImageButton"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:text="@string/selection_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="20dp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/materialcolorpicker__grey" />

                <TextView
                    android:text="@string/construction_mode_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/backgroundMain"
                    android:textAlignment="textStart"
                    android:textSize="25sp" />

                <TextView
                    android:text="@string/construction_mode_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/materialcolorpicker__grey" />

                <TextView
                    android:text="@string/basic_constructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/backgroundMain"
                    android:textAlignment="textStart"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/backgroundMain"
                        android:textAlignment="textStart"
                        android:textSize="20sp" />

                    <TextView
                        android:text="@string/point_construcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/materialcolorpicker__grey"
                        android:textAlignment="textStart"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/backgroundMain"
                        android:textAlignment="textStart"
                        android:textSize="20sp" />

                    <TextView
                        android:text="@string/line_construcion_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/materialcolorpicker__grey"
                        android:textAlignment="textStart"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/circle_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/backgroundMain"
                        android:textAlignment="textStart"
                        android:textSize="20sp" />

                    <TextView
                        android:text="@string/description_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/materialcolorpicker__grey"
                        android:textAlignment="textStart"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/polygon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/backgroundMain"
                        android:textAlignment="textStart"
                        android:textSize="20sp" />

                    <TextView
                        android:text="@string/polygon_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/materialcolorpicker__grey"
                        android:textAlignment="textStart"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="@string/significant_objects"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/backgroundMain"
                        android:textAlignment="textStart"
                        android:textSize="20sp" />

                    <TextView
                        android:text="@string/significant_object_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/materialcolorpicker__grey"
                        android:textAlignment="textStart"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/ic_altitude"
                        android:scaleType="center"
                        android:scaleX="6"
                        android:scaleY="6"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>


                <TextView
                    android:text="@string/drag_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/backgroundMain"
                    android:textAlignment="textStart"
                    android:textSize="25sp" />

                <TextView
                    android:text="@string/drag_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/materialcolorpicker__grey" />

                <TextView
                    android:text="@string/selection_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/backgroundMain"
                    android:textAlignment="textStart"
                    android:textSize="25sp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:text="@string/description_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/materialcolorpicker__grey" />


                <TextView
                    android:text="@string/utilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/backgroundMain"
                    android:textAlignment="textStart"
                    android:textSize="25sp"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="@android:dimen/app_icon_size"
                            android:layout_height="@android:dimen/app_icon_size"
                            android:background="@drawable/new_light"
                            style="@android:style/Widget.ImageButton"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:text="@string/new_project"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="@android:dimen/app_icon_size"
                            android:layout_height="@android:dimen/app_icon_size"
                            android:background="@drawable/help_light"
                            style="@android:style/Widget.ImageButton"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:text="@string/help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="@android:dimen/app_icon_size"
                            android:layout_height="@android:dimen/app_icon_size"
                            android:background="@drawable/save_light"
                            style="@android:style/Widget.ImageButton"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:text="@string/save_project"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="@android:dimen/app_icon_size"
                            android:layout_height="@android:dimen/app_icon_size"
                            android:background="@drawable/load_light"
                            style="@android:style/Widget.ImageButton"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:text="@string/open_project"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="@android:dimen/app_icon_size"
                            android:layout_height="@android:dimen/app_icon_size"
                            android:background="@drawable/center_light"
                            style="@android:style/Widget.ImageButton"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:text="@string/center_picture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="@android:dimen/app_icon_size"
                            android:layout_height="@android:dimen/app_icon_size"
                            android:background="@drawable/sett_light"
                            style="@android:style/Widget.ImageButton"
                            android:contentDescription=""
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:text="@string/settings_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@android:dimen/app_icon_size"
                            android:layout_height="@android:dimen/app_icon_size"
                            android:background="@drawable/undo_light"
                            style="@android:style/Widget.ImageButton"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:layout_width="@android:dimen/app_icon_size"
                            android:layout_height="@android:dimen/app_icon_size"
                            android:background="@drawable/redo_light"
                            style="@android:style/Widget.ImageButton"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:text="@string/undo_and_redo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            tools:ignore="RtlHardcoded,RtlSymmetry" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</RelativeLayout>
